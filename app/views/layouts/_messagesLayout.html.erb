<% if flash[:notice]%>
	<div class="alert alert-info alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true" ><i class="fa fa-times"></i>x</button>
		<%= flash[:notice]%>
	</div>
<% end %>

<% if flash[:alert]%>
	<div class="alert alert-danger alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true" ><i class="fa fa-times"></i>x</button>
		<%= flash[:alert]%>
	</div>
<% end %>

