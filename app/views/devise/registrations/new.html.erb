<div class="row">

    <div class="col-xs-12 visible-xs">
        <div class="row" style="color: ##31708f;">
                <div class="hero-unit">
                  <h1>¡Bienvenido a Codebots.net!</h1>
                  <p>Inicia sesión o registrate gratuitamente en nuestro sitio.</p>
                  <%= image_tag "Code_Is_Art.jpg", :alt => "Code is art", :title => "COde is art", :class => "img-responsive" %>
                </div>
        </div>
    </div>

    <div class="col-md-7 col-sm-9">
        <div class="container">  
            <div id="signupbox" style="margin-top:50px;color: #31708f;" class="mainbox col-md-6 col-md-offset-0 col-sm-8 col-sm-offset-0">
                  <div class="panel panel-info blk">
                    <div class="panel-heading">
                      <div class="panel-title">Registrate</div>

                      <div style="float:right; font-size: 85%; position: relative; top:-10px"><%= render "devise/shared/links" %></div>
                    </div>  

                    <div class="panel-body" >
                        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= f.error_notification %>

                           <div class="form-group">
                              <div class="col-md-12">
                                <%= f.input :name, :label => "Nombre completo: "%>
                              </div>
                            </div>
                         
                            <div class="form-group">
                                <div class="col-md-12">
                                   <%= f.input :email, :label => "Email" %>
                                </div>
                            </div>
                                
                             <div class="form-group">
                                <div class="col-md-12">
                                  <%= f.input :password, :label => "Contraseña" %>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                  <%= f.input :password_confirmtion, :label => "Repetir contraseña" %>
                                </div>
                            </div>
                                
                            <div class="form-group">                                 
                                <div class=" col-md-4">
                                   <div class="actions">
                                    <%= f.submit "Registrarse", :class => "btn btn-primary" %>
                                  </div>
                                </div>
                            </div>
                            
                          <% end %>
                       </div>
                  </div>             
               </div> 
          </div>
        </div> 


    <div class="col-md-5 col-sm-3 hidden-xs">
        <div class="row">
                <div class="hero-unit">
                  <h1>¡Bienvenido a Codebots.net!</h1>
                  <p>Inicia sesión o registrate gratuitamente en nuestro sitio.</p>
                  <%= image_tag "Code_Is_Art.jpg", :alt => "Code is art", :title => "COde is art", :class => "img-responsive" %>
                </div>
        </div>
    </div>
</div>

